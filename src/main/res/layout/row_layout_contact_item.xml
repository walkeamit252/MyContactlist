<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10dp"
        app:cardCornerRadius="@dimen/dimen_5dp">

        <RelativeLayout
            android:id="@+id/rel_layout_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_10dp">

            <ImageView
                android:id="@+id/img_view_contact_photo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/icon_contact_user"/>

            <TextView
                android:id="@+id/text_view_contact_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_toRightOf="@id/img_view_contact_photo"
                android:text="Hello"
                android:fontFamily="sans-serif-medium"
                android:textSize="@dimen/dimen_20sp"
                android:layout_marginTop="@dimen/dimen_5dp"
                />

            <TextView
                android:id="@+id/text_view_contact_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_contact_name"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_toRightOf="@id/img_view_contact_photo"
                android:text="9028041305"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/dimen_16sp"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>